<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_notifications_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textSize="@dimen/header_size_6"
            android:text="SKDLDFFJSDL"
            />
        <TextView
            android:id="@+id/message_text_notifications_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textSize="@dimen/text_size_extra_large"
            android:text="LFSDKFDSL"
            />
        <TextView
            android:id="@+id/date_text_notifications_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textSize="@dimen/text_size"
            android:text="LFSDKFDSL"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>